modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Content Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Storage Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PDF Processor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Test PDF"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vue Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Native Dev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate Icons"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Preview"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Production Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Content Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python migrate_content.py"

[[workflows.workflow]]
name = "Storage Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python migrate_to_storage.py"

[[workflows.workflow]]
name = "PDF Processor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main_processor.py"

[[workflows.workflow]]
name = "Create Test PDF"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_test_pdf.py"

[[workflows.workflow]]
name = "Run Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_pdf_processor.py -v"

[[workflows.workflow]]
name = "Frontend Dev Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- --host 0.0.0.0 --port 5175"
waitForPort = 5175

[[workflows.workflow]]
name = "Vue Frontend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd vue-frontend && npm run dev"
waitForPort = 5174

[[workflows.workflow]]
name = "React Native Dev"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npx expo start --web --port 19007"
waitForPort = 19007

[[workflows.workflow]]
name = "Generate Icons"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node scripts/generate-icons.js"

[[workflows.workflow]]
name = "Frontend Preview"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run preview -- --host 0.0.0.0"
waitForPort = 4173

[[workflows.workflow]]
name = "Frontend Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la frontend/dist && echo '---' && ls -la frontend/dist/assets"

[[workflows.workflow]]
name = "Frontend Production Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node server.js"
waitForPort = 5176

[deployment]
run = ["sh", "-c", "python3 app.py"]

